pipeline {

    agent any
    stages{
          
        stage('Build') {
            steps{
                DB_ENGINE    = 'sqlite'
                echo "Database engine is ${DB_ENGINE}"
                sh 'echo MyBuild'
            }
        }
        
        stage('Test') { 
            steps{            
                sh 'echo MyTest'
            }
        }
        
        stage('Deploy') { 
            steps{            
                sh 'echo MyDeploy'
            }
        }
    }
}
